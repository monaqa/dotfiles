{
  "prettier.trailingComma": "all",

  "python.pythonPath": "/opt/homebrew/bin/python3",
  "python.linting.mypyPath": "mypy",
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/opt/homebrew/bin/black",
  "python.sortImports.path": "/opt/homebrew/bin/isort",

  "sumneko-lua.enableNvimLuaDev": true,
  "Lua.workspace.library": [
      "~/.local/share/nvim/site/pack/jetpack/src/github.com/nvim-treesitter/nvim-treesitter/lua",
      "~/.local/share/nvim/site/pack/jetpack/src/github.com/nvim-lua/plenary.nvim/lua/plenary/busted.lua"
  ],
  "Lua.telemetry.enable": false,
  "Lua.workspace.checkThirdParty": false,

  "rust-analyzer.lens.enable": false,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.checkOnSave.target": [],
  "rust-analyzer.updates.channel": "stable",
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.completion.privateEditable.enable": true,

  "svelte.plugin.html.completions.enable": true,

  "deno.enable": true,
  "deno.lint": true,
  "deno.codeLens.references": true,
  "deno.codeLens.referencesAllFunctions": true,

  "tsdetect.mode": "auto",

  "tsserver.enable": true,

  "highlight.colorNames.enable": false,

  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["satysfi"]
    },
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"]
    },
    "nim": {
      "command": "nimlsp",
      "filetypes": ["nim"]
    },
    "satysfi-ls": {
        "command": "satysfi-language-server",
        "args": [],
        "filetypes": ["satysfi"],
        "trace.server": "verbose"
    },
    "todome-ls": {
        "command": "todome-language-server",
        "args": [],
        "filetypes": ["todome"],
        "trace.server": "verbose"
    }
  },

  "[javascript]": {"coc.preferences.formatOnSave": true },
  "[python]": {"coc.preferences.formatOnSave": true },
  "[rust]": {"coc.preferences.formatOnSave": true },
  "[typescript]": {"coc.preferences.formatOnSave": true },
  "[typescriptreact]": {"coc.preferences.formatOnSave": true },
  "[css]": {"coc.preferences.formatOnSave": true },

  "codeLens.enable": true,
  "codeLens.position": "right_align",

  "diagnostic.messageTarget": "float",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.virtualTextPrefix": "Ôêµ ",
  "diagnostic.warningSign": "üê§",
  "diagnostic.errorSign": "üö®",
  "diagnostic.infoSign": "‚ÑπÔ∏è ",
  "diagnostic.hintSign": "‚ÑπÔ∏è ",
  "diagnostic.signLevel": "error",

  "suggest.floatConfig": {
    "winblend": 10
  },

  "diagnostic.floatConfig": {
    "winblend": 15
  },

  "hover.floatConfig": {
    "winblend": 10,
    "shadow": false
  },

  "suggest.snippetIndicator": "‚ñ∫",
  "suggest.acceptSuggestionOnCommitCharacter": false,
  "suggest.asciiCharactersOnly": true,
  "suggest.invalidInsertCharacters": [
      "(",
      "<",
      "{",
      "[",
      "\r",
      "\n"
  ],
  "suggest.noselect": true,
  "suggest.enablePreselect": false,

  "list.insertMappings": {
    "<C-j>": "normal:j",
    "<C-k>": "normal:k"
  },
  "svelte.enable-ts-plugin": true
}
