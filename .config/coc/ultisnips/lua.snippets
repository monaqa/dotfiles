snippet nmap "vim.keymap.set (normal short)" b
mapset.n("$1") { "$2" }
endsnippet

snippet xmap "vim.keymap.set (visual short)" b
mapset.x("$1") { "$2" }
endsnippet

snippet omap "vim.keymap.set (op-pend short)" b
