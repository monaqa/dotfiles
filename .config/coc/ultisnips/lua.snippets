endsnippet

snippet iabbr "vim.keymap.set (insert abbrev short)" b
mapset.ia("$1") { "$2" }
endsnippet

snippet cabbr "vim.keymap.set (command-line abbrev short)" b
mapset.ca("$1") { "$2" }
endsnippet

snippet command "Description" b
vim.api.nvim_create_user_command("$1", function ()
	$0
end, {})
endsnippet

snippet expr "Lua expression block" w
(function()
	return $0
end)()
endsnippet

snippet cmd "Description" w
<Cmd>$0<CR>
endsnippet
